{
  "name": "pekral/rector-rules",
  "description": "Rector - custom rule set",
  "license": ["MIT"],
  "keywords": [
    "Rector",
    "Rule set"
  ],
  "authors": [
    {
      "name": "Petr Kr√°l",
      "email": "kral.petr.88@gmail.com",
      "role": "lead"
    }
  ],
  "require": {
    "php": "^8.3",
    "rector/rector": "^2.0.3"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "PekralRectorRule\\": "rules"
    }
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "scripts": {
    "post-update-cmd": [
      "vendor/bin/rector process rules/"
    ]
  }
}
